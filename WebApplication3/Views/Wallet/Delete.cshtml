@model WebApplication3.Models.Wallet

@{
    ViewBag.Title = "Delete";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <br />
    <div class="" style="align-content: center; justify-content: center; align-items: center; display: flex;">
        <div class="panel panel-danger " style="width: fit-content;">
            <div class="panel-heading"><h4>Eliminar Wallet</h4></div>
            <div class="panel-body text-center" style="padding-right: 30px; padding-left: 30px;">
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label for="Nombre" class="col-md-4" style="text-align:left;">Nombre</label>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", @Disabled = "disabled" } })
                            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Tipo" class="col-md-4" style="text-align:left;">Tipo</label>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Tipo, new { htmlAttributes = new { @class = "form-control", @Disabled = "disabled" } })
                            @Html.ValidationMessageFor(model => model.Tipo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="NacionSemillaal" class="col-md-4" style="text-align:left;">Semilla</label>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Semilla, new { htmlAttributes = new { @class = "form-control", @Disabled = "disabled" } })
                            @Html.ValidationMessageFor(model => model.Semilla, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="pull-right" style="padding-right: 15px;">
                            <a href="~/Wallet/Index" class="btn btn-default">Cancelar</a>
                            <input type="submit" value="Eliminar" class="btn btn-danger" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}