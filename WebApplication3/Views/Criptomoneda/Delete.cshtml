@model WebApplication3.Models.Criptomoneda

@{
    ViewBag.Title = "Eliminar";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <br />
    <div class="" style="align-content: center; justify-content: center; align-items: center; display: flex;">
        <div class="panel panel-danger " style="width: fit-content;">
            <div class="panel-heading"><h4>Eliminar Criptomoneda</h4></div>
            <div class="panel-body text-center" style="padding-right: 30px; padding-left: 30px;">
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label for="Nombre" class="col-md-4" style="text-align:left;">Nombre</label>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", @Disabled = "disabled" } })
                            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Ticker" class="col-md-4" style="text-align:left;">Ticker</label>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Ticker, new { htmlAttributes = new { @class = "form-control", @Disabled = "disabled" } })
                            @Html.ValidationMessageFor(model => model.Ticker, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Tipo" class="col-md-4" style="text-align:left;">Tipo</label>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Tipo, new { htmlAttributes = new { @class = "form-control", @Disabled = "disabled" } })
                            @Html.ValidationMessageFor(model => model.Tipo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Precio" class="col-md-4" style="text-align:left;">Precio</label>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Precio, new { htmlAttributes = new { @class = "form-control", @Disabled = "disabled" } })
                            @Html.ValidationMessageFor(model => model.Precio, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Capitalizacion" class="col-md-4" style="text-align:left;">Capitalizacion</label>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Capitalizacion, new { htmlAttributes = new { @class = "form-control", @Disabled = "disabled" } })
                            @Html.ValidationMessageFor(model => model.Capitalizacion, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="pull-right" style="padding-right: 15px;">
                            <a href="~/Instrumento/Index" class="btn btn-default">Cancelar</a>
                            <input type="submit" value="Eliminar" class="btn btn-danger" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}