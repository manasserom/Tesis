@model WebApplication3.Models.Criptomoneda

@{
    ViewBag.Title = "Cargar";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <br />
    <div class="" style="align-content: center; justify-content: center; align-items: center; display: flex;">
        <div class="panel panel-success " style="width: fit-content;">
            <div class="panel-heading"><h4>Cargar Criptomoneda</h4></div>
            <div class="panel-body text-center" style="padding-right: 30px; padding-left: 30px;">
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label for="Nombre" class="col-md-4" style="text-align:left;">Nombre</label>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Ticker" class="col-md-4" style="text-align:left;">Ticker</label>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Ticker, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Ticker, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Tipo" class="col-md-4" style="text-align:left;">Tipo</label>
                        <div class="col-md-8">
                            @Html.DropDownList("Tipo", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Tipo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Precio" class="col-md-4" style="text-align:left;">Precio</label>
                        <div class="col-md-8">
                            <input type="text" name="Precio" id="Precio" value="0" class="form-control" />
                            @Html.ValidationMessageFor(model => model.Precio, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Capitalizacion" class="col-md-4" style="text-align:left;">Capitalizacion</label>
                        <div class="col-md-8">
                            <input type="text" name="Capitalizacion" id="Capitalizacion" value="0" class="form-control" />
                            @Html.ValidationMessageFor(model => model.Capitalizacion, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="pull-right" style="padding-right: 15px;">
                            <a href="~/Criptomoneda/Index" class="btn btn-default">Cancelar</a>
                            <input type="submit" value="Cargar" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script>
    $("#Precio").on({
        "focus": function (event) {
            $(event.target).select();
        },
        "keyup": function (event) {
            $(event.target).val(function (index, value) {
                return value.replace(/\D/g, "")
                    .replace(/\B(?=(\d{3})+(?!\d)\.?)/g, ",");
            });
        }
    });
</script>