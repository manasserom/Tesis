@model WebApplication3.Models.Instrumento

@{
    ViewBag.Title = "Editar";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <br />
    <div class="" style="align-content: center; justify-content: center; align-items: center; display: flex;">
        <div class="panel panel-warning " style="width: fit-content;">
            <div class="panel-heading"><h4>Editar Instrumento</h4></div>
            <div class="panel-body text-center" style="padding-right: 30px; padding-left: 30px;">
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label for="Nombre" class="col-md-4" style="text-align:left;">Nombre</label>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Bloqueado" class="col-md-4" style="text-align:left;">Bloqueado</label>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Bloqueado, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Bloqueado, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="PagoDeInteres" class="col-md-4" style="text-align:left;">Paga Inetereses</label>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.PagoDeInteres, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.PagoDeInteres, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="InteresFijo" class="col-md-4" style="text-align:left;">Interés Fijo</label>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.InteresFijo, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.InteresFijo, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="pull-right" style="padding-right: 15px;">
                            <a href="~/Instrumento/Index" class="btn btn-default">Cancelar</a>
                            <input type="submit" value="Editar" class="btn btn-warning" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
